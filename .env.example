# LINE Messaging API (from LINE Developers Console)
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here

# Nextcloud WebDAV (URL = server only; path /remote.php/dav/files/USER/ is added by app)
NEXTCLOUD_URL=https://your-nextcloud.example.com
NEXTCLOUD_USER=your_username
NEXTCLOUD_PASSWORD=your_app_password
# Folder name under your files (LINE_Backup or /LINE_Backup/ both ok)
NEXTCLOUD_BASE_PATH=LINE_Backup
# Reply/push messages (true=on, false=off). Off = no "收到檔案..." / "✅ 已備份", saves LINE send quota; turn on when debugging.
ENABLE_LINE_REPLIES=false
# Source folders: send "1" then media -> save under Amigo, "2" -> Ben, etc.; no number or "0"/"other" -> other
SOURCE_MAP=1:Amigo,2:Ben,3:Mom
# Optional: persist source to file (path relative to cwd). Empty = disabled. Restart keeps last number.
SOURCE_STATE_FILE=data/source_state.json
# Optional: max file size in MB (0 = no limit). Larger files are skipped.
MAX_FILE_SIZE_MB=0
